{
  "name": "recommendation-service",
  "root": "services/recommendation-service",
  "sourceRoot": "services/recommendation-service/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build --no-cache -t polyforge-recommendation:1.1 .",
        "cwd": "services/recommendation-service"
      }
    },
    "build-native": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pip install -r requirements.txt && python setup.py build",
        "cwd": "services/recommendation-service"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "python -m app.main",
        "cwd": "services/recommendation-service"
      }
    },
    "serve-docker": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker run -p 5000:5000 polyforge-recommendation:1.1"
      }
    }
  },
  "tags": ["service", "python", "fastapi"]
}