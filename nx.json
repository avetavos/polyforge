{
  "version": 2,
  "npmScope": "polyforge",
  "targetDefaults": {
    "build": {
      "cache": true
    },
    "serve": {
      "cache": false
    }
  },
  "defaultBase": "main",
  "cli": {
    "packageManager": "npm"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "serve", "test", "lint"]
      }
    }
  }
}
